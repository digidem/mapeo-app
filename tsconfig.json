{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "strict": true,
    "target": "esnext"
  },
  "exclude": ["node_modules", ".babelrc", "metro.config.js", "jest.config.js"],
  "include": ["src/frontend/**/*"]
}
