{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "noEmit": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "target": "esnext"
  },
  "exclude": ["node_modules", ".babelrc", "metro.config.js", "jest.config.js"],
  "include": ["src/frontend/**/*"]
}
